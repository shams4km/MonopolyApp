<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:MonopolyApp.Client.ViewModels"
        x:Class="MonopolyApp.Client.Views.MainWindow"
        Title="Монополия" Width="400" Height="300"
        x:DataType="vm:MainWindowViewModel">
    <Design.DataContext>
        <vm:MainWindowViewModel />
    </Design.DataContext>

    <StackPanel Margin="20">
        <TextBlock Text="Добро пожаловать в Монополию!" FontSize="18" />
        <Button Content="Начать игру" Command="{Binding StartGameCommand}" HorizontalAlignment="Center" Margin="0,20,0,0" />
    </StackPanel>
</Window>