<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:MonopolyApp.Client.ViewModels"
        x:Class="MonopolyApp.Client.Views.GameWindow"
        Title="Игра" Width="600" Height="400"
        x:DataType="vm:GameViewModel">
    <Design.DataContext>
        <vm:GameViewModel />
    </Design.DataContext>

    <StackPanel Margin="20">
        <TextBlock Text="{Binding Status}" FontSize="16" TextWrapping="Wrap" />
        <Button Content="Бросить кубик" Command="{Binding RollDiceCommand}" HorizontalAlignment="Center" Margin="0,20,0,0" />
    </StackPanel>
</Window>